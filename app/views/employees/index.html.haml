=link_to 'Add a new Employee', new_employee_path, class: 'btn btn-success'

%h3 List of Employees

%table.table
  %thead
    %th ID
    %th First Name
    %th Last Name
    %th Annual Salary
    %th Super Rate
    %th Payment Start Date
    %th Payslip
    %th Actions
  %tbody
    - @employees.each do |employee|
      %tr
        %td=employee.id
        %td=employee.first_name
        %td=employee.last_name
        %td=employee.annual_salary
        %td=employee.super_rate
        %td=employee.payment_start_date
        %td=link_to 'Payslip', '#'
        %td
          =link_to 'Edit', edit_employee_path(employee), class: 'btn'
          =link_to 'X', employee_path(employee), method: :delete, confirm: 'Are you sure', class: 'btn btn-danger'


